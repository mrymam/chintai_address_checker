{
  "manifest_version": 3,
  "name": "賃貸住所チェッカー",
  "version": "1.0.2",
  "description": "SUUMO等の賃貸物件検索サイトで指定した住所リスト内の物件かチェックできる拡張ツールです",
  "permissions": [
    "storage",
    "https://suumo.jp/*",
    "https://www.homes.co.jp/chintai/*"
  ],
  "options_page": "popup/build/index.html",
  "action": {
    "default_popup": "popup/build/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://suumo.jp/*"
      ],
      "run_at": "document_end",
      "all_frames": true,
      "js": [
        "suumo.js"
      ]
    },
        {
          "matches": [
            "https://www.homes.co.jp/chintai/*"
          ],
          "run_at": "document_end",
          "all_frames": true,
          "js": [
            "content-script.js"
          ]
        }
  ]
}